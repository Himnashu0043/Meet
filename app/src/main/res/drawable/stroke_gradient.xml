<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <animation-list>
            <item android:duration="3000">
                <shape>
                    <corners android:radius="8dp" />
                    <gradient
                        android:endColor="@color/primaryTwo"
                        android:startColor="@color/primaryOne" />
                </shape>
            </item>

            <item android:duration="3000">
                <shape>
                    <corners android:radius="8dp" />
                    <gradient
                        android:angle="90"
                        android:endColor="@color/primaryTwo"
                        android:startColor="@color/primaryOne" />
                </shape>
            </item>

            <item android:duration="3000">
                <shape>
                    <corners android:radius="8dp" />
                    <gradient
                        android:angle="180"
                        android:endColor="@color/primaryTwo"
                        android:startColor="@color/primaryOne" />
                </shape>
            </item>

            <item android:duration="3000">
                <shape>
                    <corners android:radius="8dp" />
                    <gradient
                        android:angle="270"
                        android:endColor="@color/primaryTwo"
                        android:startColor="@color/primaryOne" />
                </shape>
            </item>

        </animation-list>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <corners android:radius="8dp" />
            <solid android:color="#000000" />
        </shape>
    </item>
</layer-list>