<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="org.meetcute.viewModel.BroadcastViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ivBackground"
            />
        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/frameView"
            android:digits="9:16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <RelativeLayout
                android:id="@+id/rlTop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivLivePrime"
                    android:layout_width="76dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    android:background="@drawable/luve_premium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ivLive"
                    android:layout_width="76dp"
                    android:layout_height="34dp"
                    android:visibility="visible"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/live"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </RelativeLayout>



            <ImageView
                android:id="@+id/cross"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:padding="14dp"
                android:src="@drawable/cross"
                android:background="@drawable/circle_fade"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/ivMinimize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:padding="8dp"
                android:src="@drawable/minimize_screen"
                app:layout_constraintEnd_toStartOf="@id/cross"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:elevation="1dp"
                app:layout_constraintTop_toTopOf="@id/ivNotification"
                app:layout_constraintEnd_toEndOf="@id/ivNotification"
                android:background="@drawable/green_circle"
                android:backgroundTint="@color/red"
                android:layout_margin="10dp"
                />

            <ImageView
                android:id="@+id/ivNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:padding="8dp"
                android:src="@drawable/notification"
                app:layout_constraintEnd_toStartOf="@id/ivMinimize"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvViewCount"
                style="@style/Text14Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fade_corner"
                android:drawableStart="@drawable/eye_unlocked"
                android:drawablePadding="4dp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="4dp"
                app:layout_constraintBottom_toBottomOf="@id/ivNotification"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/ivNotification" />


            <LinearLayout
                android:id="@+id/llCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/fade_corner"
                android:paddingHorizontal="8dp"
                android:paddingVertical="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rlTop">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/coin" />

                <TextView
                    android:id="@+id/tvCoins"
                    style="@style/Text14Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="0" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/includeCoinGiven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/llCoins"
                app:layout_constraintTop_toTopOf="@id/llCoins">

                <LinearLayout
                    android:id="@+id/lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingStart="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/FirstLay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvContFirstName"
                            style="@style/Text12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="cute_naina"
                            android:textSize="10sp"
                            app:layout_constraintStart_toStartOf="@id/ivConProfile"
                            app:layout_constraintTop_toBottomOf="@id/ivConProfile" />


                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivConProfile"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="-6dp"
                            android:background="@drawable/yellow_ring"
                            android:elevation="2dp"
                            android:padding="1dp"
                            android:src="@drawable/profilephoto"
                            app:layout_constraintTop_toBottomOf="@id/ivCoin"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignStart="@id/ivConProfile"
                            android:layout_alignBottom="@id/ivConProfile"
                            android:layout_marginStart="-4dp"
                            android:layout_marginBottom="-4dp"
                            android:background="@drawable/green_circle"
                            android:backgroundTint="#D9D9D9"
                            android:elevation="2dp"
                            android:padding="1dp"
                            android:src="@drawable/diamonds"
                            app:layout_constraintBottom_toBottomOf="@+id/ivConProfile"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:id="@+id/ivCoin"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/coin"
                            app:layout_constraintStart_toEndOf="@+id/ivConProfile"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvContfirstCoin"
                            style="@style/Text12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="0"
                            app:layout_constraintBottom_toBottomOf="@+id/ivCoin"
                            app:layout_constraintStart_toEndOf="@+id/ivCoin"
                            app:layout_constraintTop_toTopOf="@+id/ivCoin" />

                        <View
                            android:id="@+id/firstDiv"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginStart="12dp"
                            android:background="@color/yellow"
                            app:layout_constraintBottom_toBottomOf="@+id/ivConProfile"
                            app:layout_constraintTop_toTopOf="@+id/ivConProfile"
                            tools:layout_editor_absoluteX="4dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/secondLay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">


                        <TextView
                            android:id="@+id/tvContSecName"
                            style="@style/Text12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="cute_naina"
                            android:textSize="10sp"
                            app:layout_constraintStart_toStartOf="@id/ivProfileTwo"
                            app:layout_constraintTop_toBottomOf="@id/ivProfileTwo" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivProfileTwo"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="-6dp"
                            android:background="@drawable/yellow_ring"
                            android:elevation="2dp"
                            android:padding="1dp"
                            android:src="@drawable/profilephoto"
                            app:layout_constraintTop_toBottomOf="@id/ivCoin2"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignStart="@id/ivProfileTwo"
                            android:layout_alignBottom="@id/ivProfileTwo"
                            android:layout_marginStart="-4dp"
                            android:layout_marginBottom="-4dp"
                            android:background="@drawable/green_circle"
                            android:backgroundTint="#D9D9D9"
                            android:elevation="2dp"
                            android:padding="1dp"
                            android:src="@drawable/diamonds"
                            app:layout_constraintBottom_toBottomOf="@+id/ivProfileTwo"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:id="@+id/ivCoin2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/coin"
                            app:layout_constraintStart_toEndOf="@+id/ivProfileTwo"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvConstSecondCoin"
                            style="@style/Text12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="0"
                            app:layout_constraintBottom_toBottomOf="@+id/ivCoin2"
                            app:layout_constraintStart_toEndOf="@+id/ivCoin2"
                            app:layout_constraintTop_toTopOf="@+id/ivCoin2" />

                        <View
                            android:id="@+id/secondDiv"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginStart="12dp"
                            android:background="@color/yellow"
                            app:layout_constraintBottom_toBottomOf="@+id/ivProfileTwo"
                            app:layout_constraintTop_toTopOf="@+id/ivProfileTwo"
                            tools:layout_editor_absoluteX="4dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/third"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivProfile3"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="-6dp"
                            android:background="@drawable/yellow_ring"
                            android:elevation="2dp"
                            android:padding="1dp"
                            android:src="@drawable/profilephoto"
                            app:layout_constraintStart_toEndOf="@id/tvCoin3"
                            app:layout_constraintTop_toBottomOf="@id/ivCoin3"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />


                        <TextView
                            android:id="@+id/tvConstThirdName"
                            style="@style/Text12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="cute_naina"
                            android:textSize="10sp"
                            app:layout_constraintEnd_toEndOf="@+id/ivProfile3"
                            app:layout_constraintTop_toBottomOf="@id/ivProfile3" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_alignStart="@id/ivProfile3"
                            android:layout_alignBottom="@id/ivProfile3"
                            android:layout_marginStart="-4dp"
                            android:layout_marginBottom="-4dp"
                            android:background="@drawable/green_circle"
                            android:backgroundTint="#D9D9D9"
                            android:elevation="2dp"
                            android:padding="1dp"
                            android:src="@drawable/diamonds"
                            app:layout_constraintBottom_toBottomOf="@+id/ivProfile3"
                            app:layout_constraintStart_toStartOf="@id/ivProfile3"
                            app:layout_constraintTop_toBottomOf="@+id/ivProfile3" />

                        <ImageView
                            android:id="@+id/ivCoin3"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/coin"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvCoin3"
                            style="@style/Text12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="-2dp"
                            android:text="0"
                            app:layout_constraintStart_toEndOf="@id/ivCoin3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/thirdDeiv"
                            android:layout_width="0dp"
                            android:layout_height="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@color/yellow"
                            app:layout_constraintBottom_toBottomOf="@+id/ivProfile3"
                            app:layout_constraintEnd_toEndOf="@+id/ivProfile3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/ivProfile3" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <include
                android:id="@+id/includeCoinGiven1"
                layout="@layout/item_coins_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/llCoins"
                app:layout_constraintTop_toTopOf="@id/llCoins" />

            <LinearLayout
                android:id="@+id/llGift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/live_gifs_bg"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llCoins">

                <ImageView
                    android:id="@+id/ivImgGift"
                    android:layout_width="45dp"
                    android:layout_height="48dp"
                    android:src="@drawable/live_balloons" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/coin" />

                    <TextView
                        android:id="@+id/tvCoinTagGift"
                        style="@style/Text12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="0" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/ProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:progress="40"
                    android:layout_marginTop="6dp"
                    android:progressDrawable="@drawable/live_gifts_progress"
                    android:secondaryProgressTint="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvVideoRequestCount"
                style="@style/Text14"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="end"
                android:layout_marginTop="-8dp"
                android:background="@drawable/green_circle"
                android:backgroundTint="@color/red"
                android:elevation="2dp"
                android:gravity="center"
                android:text="0"
                app:layout_constraintEnd_toEndOf="@id/rlVideoRequest"
                app:layout_constraintTop_toTopOf="@id/rlVideoRequest" />


            <FrameLayout
                android:id="@+id/rlVideoRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llCoins">

                <ImageView
                    android:id="@+id/ivVideoRequest"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/circle_fade"
                    android:padding="14dp"
                    android:src="@drawable/video_call_live" />
            </FrameLayout>

            <TextView
                style="@style/Text14"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="end"
                android:layout_marginTop="-8dp"
                android:background="@drawable/green_circle"
                android:backgroundTint="@color/red"
                android:elevation="2dp"
                android:gravity="center"
                android:text="2"
                app:layout_constraintEnd_toEndOf="@id/rlChats"
                app:layout_constraintTop_toTopOf="@id/rlChats" />

            <RelativeLayout
                android:id="@+id/rlChats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rlVideoRequest">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/circle_fade"
                    android:padding="14dp"
                    android:src="@drawable/live_chat" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/llGroup"
                app:constraint_referenced_ids="rlGoPremium,tvGoPremium"
                />
            <LinearLayout
                android:id="@+id/rlGoPremium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rlChats">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/crown" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvGoPremium"
                style="@style/Text12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="12dp"
                android:text="@string/GoPremium"
                app:layout_constraintEnd_toEndOf="@id/rlGoPremium"
                app:layout_constraintStart_toStartOf="@id/rlGoPremium"
                app:layout_constraintTop_toBottomOf="@id/rlGoPremium" />


            <ImageView
                android:id="@+id/ivContest"
                style="@style/Text12"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/contests"
                android:text="@string/start_contest"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvGoPremium" />


            <TextView
                android:id="@+id/tvStartContest"
                style="@style/Text12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/start_contest"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivContest" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/midGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginBottom="12dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/rvGifts"
                app:layout_constraintEnd_toEndOf="@id/midGuide"
                app:layout_constraintStart_toStartOf="parent"
                tools:itemCount="6"
                tools:listitem="@layout/item_live_comments" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGifts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/llBottom"
                tools:itemCount="6"
                tools:listitem="@layout/item_gifts" />

            <LinearLayout
                android:id="@+id/llBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/fade_corner_two"
                app:layout_constraintBottom_toBottomOf="parent">

                <EditText
                    android:id="@+id/etMessage"
                    style="@style/EditText"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Comment..."
                    android:paddingHorizontal="12dp"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@drawable/cursor" />

                <ImageView
                    android:id="@+id/ivSend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="6dp"
                    android:padding="6dp"
                    android:src="@drawable/send_icon" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivSound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:visibility="visible"
                        android:src="@drawable/mic_enable" />

                    <ImageView
                        android:id="@+id/ivUnSound"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        android:visibility="gone"
                        android:src="@drawable/mic_disable" />
                </RelativeLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/setting_icon" />


