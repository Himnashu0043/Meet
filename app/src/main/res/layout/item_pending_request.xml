<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDayTag"
            style="@style/Text16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:paddingVertical="12dp"
            android:text="Today"
            android:textColor="@color/hintTextColor"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <RelativeLayout
            android:id="@+id/rlPerformer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:elevation="2dp"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivProfile"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                android:src="@drawable/profile_conversation" />

            <ImageView
                android:id="@+id/ivStatus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignEnd="@id/ivProfile"
                android:layout_alignBottom="@id/ivProfile"
                android:src="@drawable/green_circle" />


            <TextView
                android:id="@+id/tvTitle"
                style="@style/Text20Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/ivProfile"
                android:text="Hanna Koisy" />

            <TextView
                android:id="@+id/tvCoinRate"
                style="@style/Text14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:layout_alignStart="@id/tvTitle"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/secondaryColor" />


            <org.meetcute.view.customViews.VideoCallImage
                android:id="@+id/ivSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvNotify"
                style="@style/Text14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:background="@drawable/button_gradient"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="2dp"
                android:text="Notify"
                android:visibility="gone" />


        </RelativeLayout>

    </LinearLayout>


</layout>
