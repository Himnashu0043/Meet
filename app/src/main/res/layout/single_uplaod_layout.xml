<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="videoUrl"
            type="String" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingHorizontal="2dp"
        android:paddingTop="12dp">


        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginTop="-12dp"
            android:layout_marginEnd="-2dp"
            android:background="@drawable/green_circle"
            android:backgroundTint="@color/red"
            android:elevation="6dp"
            android:padding="12dp"
            android:src="@drawable/delete_white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rlUploadLayout"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:src="@drawable/info"
            android:visibility="visible" />



        <androidx.cardview.widget.CardView
            android:id="@+id/cardUploaded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/rlUploadLayout"
            android:layout_alignBottom="@id/rlUploadLayout"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/ivUploaded"
                app:load="@{videoUrl}"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/rlUploadLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_corner_8dp">


            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:src="@drawable/upload_two" />

            <TextView
                android:id="@+id/tvTitle"
                style="@style/Text16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivImage"
                android:layout_gravity="center"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Upload 5 best photos*"
                android:textColor="@color/white" />

            <org.meetcute.view.customViews.UploadButton
                android:id="@+id/btnUpload"
                style="@style/Text12"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_below="@id/tvTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/button_gradient"
                android:gravity="center"
                android:text="Upload file"
                android:textAllCaps="false" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tvNote"
            style="@style/Text12Italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlUploadLayout"
            android:layout_gravity="center"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:text="Note: upload through camera only"
            android:textColor="@color/unselectedGray"
            android:visibility="gone" />

    </RelativeLayout>


</layout>