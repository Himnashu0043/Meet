<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlPerformer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/drawable_performaer"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/Text14Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Start your Performer mode" />

            <ImageView
                android:id="@+id/ivCoin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/tvTitle"
                android:layout_marginTop="6dp"
                android:src="@drawable/coin"

                />

            <TextView
                android:id="@+id/tvCoinRate"
                style="@style/Text12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitle"
                android:layout_alignBottom="@id/ivCoin"
                android:layout_marginStart="4dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/ivCoin"
                android:gravity="center"
                android:text="640/min" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/tvswitch"
                android:thumb="@drawable/thumb_switch"
                android:track="@drawable/track_selector"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@id/ivSetting"
                tools:ignore="UseSwitchCompatOrMaterialXml" />

            <ImageView
                android:id="@+id/ivSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/setting_icon" />
        </RelativeLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@id/rlPerformer"
            app:tabIndicator="@drawable/tab_indicator"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabIndicatorFullWidth="true"
            app:tabIndicatorHeight="4dp"
            app:tabTextColor="@color/white"
            app:tabSelectedTextAppearance="@style/CustomTabItemStyleSelected"
            app:tabTextAppearance="@style/CustomTabItemStyle"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tabLayout" />

    </LinearLayout>
</layout>