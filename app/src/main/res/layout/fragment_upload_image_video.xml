<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="org.meetcute.viewModel.BasicInfoViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/flNext"
            android:layout_marginBottom="8dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">

                <org.meetcute.view.customViews.UploadLayout
                    android:id="@+id/uploadLayoutOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    app:buttonText="Upload File"
                    app:title="Upload 5 best photos*" />

                <org.meetcute.view.customViews.SingleUploadLayout
                    android:id="@+id/uploadThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="20dp"
                    app:buttonText="Upload File"
                    app:title="Upload thumbnail loop Video (15 sec max)*" />

                <org.meetcute.view.customViews.SingleUploadLayout
                    android:id="@+id/uploadSelfLoop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="20dp"
                    app:buttonText="Upload File"
                    app:title="Upload Self loop Video (15 sec max)*"
                    app:uploadNote="Note: upload through camera only" />
            </LinearLayout>

        </ScrollView>

        <org.meetcute.view.customViews.AppButton
            android:id="@+id/flNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:buttonText="Next"
            app:isIcon="true" />


    </RelativeLayout>
</layout>