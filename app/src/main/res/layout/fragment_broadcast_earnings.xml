<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingDefaultResource">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clBroadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/dialog_backgournd"
            android:paddingTop="16dp"
            android:paddingBottom="30dp"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/dividerTwo"
                app:layout_constraintBottom_toBottomOf="@id/tvEarningValue"
                app:layout_constraintEnd_toStartOf="@id/tvTodaysEarningValue"
                app:layout_constraintStart_toEndOf="@id/tvEarningValue"
                app:layout_constraintTop_toBottomOf="@id/tvEarnings" />

            <TextView
                android:id="@+id/tvEarnings"
                style="@style/Text12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/earnings"
                app:layout_constraintEnd_toStartOf="@id/tvTodaysEarnings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTodaysEarnings"
                style="@style/Text12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_s_earnings"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvEarnings"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tvEarningValue"
                style="@style/Text24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="$8,900"
                android:textColor="@color/green"
                app:layout_constraintEnd_toEndOf="@+id/tvEarnings"
                app:layout_constraintStart_toStartOf="@+id/tvEarnings"
                app:layout_constraintTop_toBottomOf="@+id/tvEarnings" />

            <TextView
                android:id="@+id/tvTodaysEarningValue"
                style="@style/Text24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="$8,900"
                android:textColor="@color/green"
                app:layout_constraintEnd_toEndOf="@id/tvTodaysEarnings"
                app:layout_constraintStart_toStartOf="@id/tvTodaysEarnings"
                app:layout_constraintTop_toBottomOf="@id/tvTodaysEarnings" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ivChart"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:scaleType="fitXY"
            android:src="@drawable/bd_earning_one"
            app:layout_constraintTop_toBottomOf="@id/clBroadcast" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>