<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_background"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivVideoCall"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/home_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvNameComment"
                style="@style/Text20Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="30dp"
                android:text="@string/HannaKoisy"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/ivVideoCall"
                app:layout_constraintTop_toTopOf="@id/ivVideoCall" />

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="71dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="22dp"
                android:text="33 Years"
                android:textColor="#C5CEE0"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/ivVideoCall"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNameComment" />

            <ImageView
                android:id="@+id/ivCoin"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/coin"
                app:layout_constraintBottom_toBottomOf="@+id/tvAge"
                app:layout_constraintStart_toEndOf="@id/tvAge"
                app:layout_constraintTop_toTopOf="@id/tvAge" />

            <TextView
                android:id="@+id/tvcoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="22dp"
                android:drawablePadding="1dp"
                android:text="20"
                android:textColor="#C5CEE0"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/ivCoin"
                app:layout_constraintTop_toBottomOf="@id/tvNameComment" />


            <ImageView
                android:id="@+id/ivSmallCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="26dp"
                android:src="@drawable/three_dot"
                app:layout_constraintBottom_toBottomOf="@+id/tvNameComment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGreetings"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="12dp"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/llBottom"
            app:layout_constraintTop_toBottomOf="@id/clTop"
            tools:itemCount="2"
            tools:listitem="@layout/item_comment_bottom" />

        <LinearLayout
            android:id="@+id/llBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/fade_corner_two"
            android:backgroundTint="@android:color/darker_gray"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/rvGreetings">

            <EditText
                android:id="@+id/ivComment"
                style="@style/EditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Comment..."
                android:paddingHorizontal="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="6dp"
                android:src="@drawable/gallery" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="6dp"
                android:padding="6dp"
                android:src="@drawable/send_icon" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>